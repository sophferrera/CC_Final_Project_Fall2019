function snow(){ //headlights will turn on in the snow
  
  //image(mountains, width/2, height/2);
  
  for(var i = 0; i < snowflakes.length; i++){
    snowflakes[i].move();
    snowflakes[i].show();
    snowflakes[i].makeMore();
  }
}


