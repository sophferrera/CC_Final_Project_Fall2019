    quad(570, 300, 620, 300, 620, 140, 570, 140);
    quad(640, 300, 680, 300, 680, 30, 640, 30);
    quad(690, 300, 750, 300, 750, 100, 690, 100);
    quad(750, 300, 800, 300, 800, 35, 750, 35);
