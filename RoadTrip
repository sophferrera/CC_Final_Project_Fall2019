    quad(175, 300, 185, 300, 185, 10, 175, 10);
    quad(220, 300, 260, 300, 260, 50, 220, 50);
    quad(260, 300, 320, 300, 320, 100, 260, 100);
    quad(350, 300, 380, 300, 380, 5, 350, 5);
